{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "scripts/generate-client.js",
    "../static/types/**/*.ts"
, "webpack.config.js", "src/components/richtext/Typehead/index.js", "src/components/richtext/artifacts-plugin/artifact-node.jsx", "src/components/richtext/VarPlugin.js", "src/components/richtext/VarPlugin.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
